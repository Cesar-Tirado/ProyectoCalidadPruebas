                <input type="text" class="form-control" id="txtBusqueda" placeholder="Ingrese un nombre">
                <div class="input-group-append">
                    <button class="btn btn-primary" id="btnBuscar">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>
        </div> 

    </div>

