@{
    ViewBag.Title = "Home Page";

}

<style>
    #boton01 .btn {
        font-size: 12px ;
        margin:2px;
    }

    #BusquedaFecha {
        justify-content:center;
        align-content:center;
        align-items:center;
        font-size: 14px;       
    }

    #BusquedaFecha .btn {
        font-size: 12px;
    }
    .form-control{
        height:32px;
    }
    .input-group .btn {
        height: 32px;
    }
