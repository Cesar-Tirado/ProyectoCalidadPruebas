
@{
    ViewBag.Title = "Index";
    Layout = null;
}


<head>
    <meta name="viewport" content="width=device-width" />
    <title>Inicio</title>
    @Styles.Render("~/Content/css")
</head>

<body class="bg-white">

    <style>
        * {
            font-family: 'Roboto', sans-serif;
            font-size: 14px;
        }

        #carouselExampleAutoplaying {
            height: 75%;
        }

        .SegFila {
            font-size: 15px !important;
            font-weight: 700;
            color: red;
        }

        .SegFila:hover {
            color: gray;
        }

        .custom-button {
            background-color: transparent;
            border: none;
            color: #000;
            padding: 0;
        }

        .custom-card {
            background-color: transparent;
            border: none;
            padding: 0;
        }

        footer {
            background: #222434;
            min-height: 100px;
        }

        footer a {
            color: white;
            font-size: 13px;
        }

        #Header1 {
            height: 60px;
        }
        
        #botonI {
            margin-right:-15px;
        }

    </style>


    <!-- HEADER -->
    <div class="bg-light">
        <div class="container w-100 text-center " id="Header1">
            <div class="row py-3">
                <div class="col-auto me-auto">
                    <a href="@Url.Action("Index","Tienda")" class="SegFila nav-item nav-link ">Pide aquí</a>
                </div>
                <div class="col-auto" id="botonI">
                    <a id="z" class="btn btn-danger btn-block " href="@Url.Action("Index","Login")"> Iniciar Sesión </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Segunda fila -->
    <nav class="navbar-expand-md  bg-light sticky-top py-0 px-md-5">
        <div class="container">
            <div class="d-flex justify-content-start">
               
            </div>
        </div>
    </nav>


    <!-- CARRUSEL  -->
    <section class="container justify-content-center p-0">
        <div id="carouselExampleAutoplaying" class="carousel slide img-fluid " data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="@Url.Content("~/Imagenes/Portada/01imagen.JPG")" class="d-block w-100 h-100 carrusel-img" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="@Url.Content("~/Imagenes/Portada/02imagen.JPG")" class="d-block w-100 h-100 carrusel-img" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="@Url.Content("~/Imagenes/Portada/03imagen.JPG")" class="d-block w-100 h-100 carrusel-img" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="@Url.Content("~/Imagenes/Portada/04imagen.JPG")" class="d-block w-100 h-100 carrusel-img" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="@Url.Content("~/Imagenes/Portada/05imagen.JPG")" class="d-block w-100 h-100 carrusel-img" alt="...">
                </div>
            </div>

            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </section>


    <!--FOOTER PIE PAGINA-->
    <footer class="w-100  d-flex  align-items-center justify-content-center flex-wrap ">


       
        <p class="text-decoration-none text-light px-3 p-3"> César T - Carlos G &copy; Todos Los Derechos Reservados 2023</p>
    </footer>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")


</body>


@section scripts{

    <script>

        $(document).ready(function () {


        });

    </script>

}
